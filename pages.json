{
	"easycom": {
		"autoscan": true,
		"custom": {
	    "^z-(.*)": "@zebra-ui/swiper/components/z-$1/z-$1.vue"
	  }
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/welcome/welcome",
			"style": {
				"navigationBarTitleText": "欢迎",
				"enablePullDownRefresh" : false,
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页"
			}
		},
		{
			"path": "pages/foodsList/foodsList",
			"style": {
				"navigationBarTitleText": "菜品",
				"enablePullDownRefresh" : false
			}
		},
		{
			"path" : "pages/drink/drink",
			"style" : 
			{
				"navigationBarTitleText" : "喝水"
				
			}
		},
		{
			"path" : "pages/foodsList/foodDetail",
			"style" : 
			{
				"navigationBarTitleText" : ""
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#579bdf",
		"backgroundColor": "#579bdf"
	},
	"uniIdRouter": {},
	"tabBar": {
		"color": "#fff",
		"selectedColor": "#ffffff",
		"borderStyle": "black",
		"backgroundColor": "#579bdf",
		"fontSize": "20px",
		"list": [
			{
				"pagePath": "pages/index/index",
				"iconPath": "static/images/cow.png",
				"selectedIconPath": "static/images/cow.png",
				"text": "首页"
			},
			{
				"pagePath": "pages/drink/drink",
				"iconPath": "static/images/drink.png",
				"selectedIconPath": "static/images/drink.png",
				"text": "喝水"
			},
			{
				"pagePath": "pages/foodsList/foodsList",
				"iconPath": "static/images/cai.png",
				"selectedIconPath": "static/images/cai.png",
				"text": "菜品"
			}
		]
	}
	
}
